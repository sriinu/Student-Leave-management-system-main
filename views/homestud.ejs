<% include ./partial/header %>
<% include ./partial/studfunction %> 
<div
class="col-sm-6"
style="    flex: 0 0 50%;
max-width: 60%;
margin-left: 431px;
margin-top: -181px;  text-align: -webkit-center;"
>
      <div class="thumbnail">
        <img
          style="height:150px;width:150px;border-radius: 100%"
          src="<%=student.image%>"
        />
        <h1><strong>Name:</strong> <%=student.name%></h1>
        <h4><strong>Type:</strong><%=student.type%></h4>

        <h4>Username: <%=student.username%></h4>
        <h4>Department:<%=student.department%></h4>
        <h4>Hostel: <%=student.hostel%></h4>
      </div>
    </div>

    <div class="container" >
      <table class="content-table"
      style="margin: 50px auto;min-width:400px;width: 90%; box-shadow: 0 0 20px rgba(0,0,0,0.15);">
        <tr  style="background-color: rgb(9, 1, 19); border-radius: 5px 5px 0 0;overflow: hidden;  color: #ffffff;text-align: left; font-weight: bold;"
        >
          <th>
            Subject
          </th>
          <th>
            From
          </th>
          <th>To</th>
          <th>Days</th>
          <th>Status</th>
        </tr>
        <%Leav.forEach(function(leave){%>

        <tr>
          <td><%=leave.subject%></td>
          <td><%=leave.from%></td>
          <td><%=leave.to%></td>
          <td><%=leave.days%></td>
          <td><%if(leave.status==='pending'){%>
            <p style="color:blueviolet;"><%=leave.status%></p>
            <%}else if(leave.status==='approved'){%>
              <p style="color: green;"><%=leave.status%></p>
              <%}else{%><p style="color: red;"><%=leave.status%></p>
            <%}%>
          </td>

        </tr>

        <%})%>
      </table>
    </div>

    <% include ./partial/footer %>
  </div>
</div>
